@using _25may.ViewModels;
@{
    int count =((Model.CurrentPage-1)*2)+1;
}
@model PaginateVM<Team>
<div>
     <a asp-action="Create"><button type="button" class="btn btn-success">Create</button></a>
</div>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <p class="card-description">
                Add class <code>.table-{color}</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Profession
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Description
                            </th>
                             <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Items){
                        <tr class="table-info">
                            <td>
                                @(count++)
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Profession.Name
                            </td>
                            <td>
                                @item.Image
                            </td>
                            <td>
                                @item.Description
                            </td>
                             <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary">Edit</button></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>
                            </td>
                        </tr>    
                        }
                    </tbody>
                </table>
                <nav aria-label="...">
                    <ul class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item ">
                                <a asp-route-page="@(Model.CurrentPage-1)" class="page-link">Previous</a>
                            </li>
                        }
                        @for(int i=1;i<=Model.PageCount;i++){
                        <li class="page-item @(Model.CurrentPage==i ? "active": "")"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }
                        @if (Model.PageCount != Model.CurrentPage)
                        {
                            <li class="page-item">
                                <a asp-route-page="@(Model.CurrentPage+1)"  class="page-link" >Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>